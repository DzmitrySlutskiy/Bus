<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity"
              android:padding="@dimen/d10dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iBtnNews"
            android:src="@drawable/news"
            android:padding="@dimen/d5dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:contentDescription="@string/ibtnNews"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iBtnRoute"
            android:src="@drawable/route"
            android:padding="@dimen/d5dp"
            android:layout_weight="1"
            android:contentDescription="@string/ibtnRoute"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iBtnStops"
            android:src="@drawable/stop"
            android:padding="@dimen/d5dp"
            android:layout_weight="1"
            android:contentDescription="@string/ibtnStops"/>
    </LinearLayout>



        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/frmMain"
            android:layout_weight="1">


        </FrameLayout>


</LinearLayout>
