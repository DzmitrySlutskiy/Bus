<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/list_view_item">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/text_view_bus_number"
        android:layout_gravity="center"
        android:layout_margin="@dimen/text_view_padding"
        android:minWidth="@dimen/text_view_bus_min_width"
        android:textAlignment="center"
        android:typeface="normal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/text_view_begin_stop"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_margin="@dimen/text_view_padding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/text_view_end_stop"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_margin="@dimen/text_view_padding"/>

</LinearLayout>